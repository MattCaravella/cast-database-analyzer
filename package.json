{
  "name": "cast-database-analyzer",
  "version": "1.5.1",
  "description": "CAST Database Analyzer - FBI Telecommunications Forensics Tool",
  "main": "simple-frontend.html",
  "scripts": {
    "tauri:dev": "cargo tauri dev",
    "tauri:build": "node build-tauri.js && cargo tauri build",
    "tauri:prebuild": "node build-tauri.js",
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "keywords": ["forensics", "telecommunications", "analysis"],
  "author": "FBI CAST Team",
  "license": "US Government",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "gov.fbi.cast.analyzer",
    "productName": "CAST Database Analyzer",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron-main.js",
      "simple-frontend.html",
      "src-tauri/icons/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "msi",
          "arch": ["x64"]
        }
      ],
      "icon": "src-tauri/icons/icon.png"
    },
    "linux": false,
    "mac": false,
    "msi": {
      "oneClick": false,
      "upgradeCode": "{B8A3B3F0-1234-5678-9ABC-DEF012345678}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": null
  }
}
